extends ../layout.pug
block contenido
	div(class="col-md-5 center-block no-float top-space text-left")
		h1(class="text-center") Agregar Alumno
		form(method="post" action="/alumno" name="formulario" style="margin-top:1.5em;" enctype="multipart/form-data")
			div(class="form-group")
				label Nombre
				input(type="text" name="title" placeholder=" Nombre del alumno" class="form-control")
			div(class="form-group")
				label Descripcion del alumno
				textarea(name="description" placeholder=" Descripcion del Alumno" class="form-control")
			div(class="form-group")
				label edad
				input(type="number" name="price" placeholder="Edad del alumno" class="form-control")
			div(class="form-group")
				label Imagen
				input(type="file" name="image_avatar")
			div(class="form-group")
				label Contraseña
				input(type="password" name="password" placeholder=" Contraseña del administrador" class="form-control")
			div(class="form-group text-right")
				input(type="submit" id="btn" class="btn btn-info" value="Enviar")
	script(src="../js/validar.js")
				